<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity"
              android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="属性动画（硬件加速）"
                />

        <com.example.dpt.rotateanimdemos.widget.SimpleLeLoadingViewHardware
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/slv1"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_orange_light"
                />

        <Button
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn1"
                android:text="@string/play_anim"
                android:onClick="playAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="属性动画（绘制）"
                />

        <com.example.dpt.rotateanimdemos.widget.SimpleLeLoadingView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/slv2"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_green_dark"
                />

        <Button
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn2"
                android:text="@string/play_anim"
                android:onClick="playAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

        <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补间动画"
                />

        <com.example.dpt.rotateanimdemos.widget.LeLoadingView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/slv3"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_purple"
                />

        <Button
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn3"
                android:text="@string/play_anim"
                android:onClick="playAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn4"
            android:text="@string/play_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>
